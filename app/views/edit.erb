<form method="post" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Recipe Name: <%= @recipe.name %> <input type="text" value= "<%= @recipe.name %>" name="name"></h2><br>
  <h2>Ingredients: <input type="text" value= "<%= @recipe.ingredients %>" name="ingredients"></h2><br>
  <h2>Cook Time: <input type="text" value="<%= @recipe.cook_time %>" name="cook_time"></h2><br>
  <input type="submit" value="submit">
</form>
